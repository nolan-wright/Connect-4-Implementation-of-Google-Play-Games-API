<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorWhite"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:text="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_marginEnd="@dimen/chat_icon_marginRight"
        android:layout_toStartOf="@id/ib_exit"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:alpha=".5"
            android:src="@drawable/chat"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="chat"
            android:layout_width="@dimen/chat_icon_size"
            android:layout_height="@dimen/chat_icon_size" />

        <View
            android:id="@+id/chat_notification_badge"
            android:visibility="gone"
            android:background="@drawable/chat_notification_badge"
            android:layout_gravity="end|top"
            android:layout_marginEnd="@dimen/chat_notification_badge_margin"
            android:layout_marginTop="@dimen/chat_notification_badge_margin"
            android:layout_width="@dimen/chat_notification_badge_size"
            android:layout_height="@dimen/chat_notification_badge_size" />

    </FrameLayout>

    <ImageButton
        android:alpha="0.5"
        android:id="@+id/ib_exit"
        android:src="@drawable/exit"
        android:scaleType="fitCenter"
        android:background="@null"
        android:onClick="exit"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/exit_icon_size"
        android:layout_height="@dimen/exit_icon_size" />

</RelativeLayout>