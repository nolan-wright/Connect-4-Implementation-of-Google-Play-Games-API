<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/chat_message_topbottom_margin"
        android:layout_marginBottom="@dimen/chat_message_topbottom_margin"
        android:layout_marginStart="@dimen/chat_message_side_margin"
        android:id="@+id/tv_receivedMessage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_rectangle_green"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/chat_message_text_size"
        android:paddingTop="@dimen/chat_message_padding_topbottom"
        android:paddingBottom="@dimen/chat_message_padding_topbottom"
        android:paddingStart="@dimen/chat_message_padding_sides"
        android:paddingEnd="@dimen/chat_message_padding_sides"
        android:maxWidth="@dimen/chat_message_max_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>