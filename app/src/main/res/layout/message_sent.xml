<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.purduegmail.mobileapps.project_v3.WrapWidthTextView
        android:layout_marginTop="@dimen/chat_message_marginTop"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_rectangle_red"
        android:id="@+id/messageSent"
        android:textSize="@dimen/chat_message_text_size"
        android:textColor="@color/colorWhite"
        android:paddingTop="@dimen/chat_message_padding_topbottom"
        android:paddingBottom="@dimen/chat_message_padding_topbottom"
        android:paddingStart="@dimen/chat_message_padding_sides"
        android:paddingEnd="@dimen/chat_message_padding_sides"
        android:maxWidth="@dimen/chat_message_max_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>